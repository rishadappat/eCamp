<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApplicationModules.Dashboard.Activities.MainBottomBarActivity"
    android:background="#6D6151"
    android:fitsSystemWindows="true">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:cropToPadding="false"
        android:clipChildren="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:elevation="5dp"
            android:paddingTop="10dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="true"
                android:clipChildren="true"
                android:background="@drawable/main_content_bg"
                android:fitsSystemWindows="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <RelativeLayout
                    android:id="@+id/mainContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:background="@android:color/transparent"
                    android:clipToPadding="true"
                    android:clipChildren="true"
                    android:layout_marginTop="10dp"
                    android:fitsSystemWindows="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        android:clipToPadding="true"
                        android:clipChildren="true"
                        android:background="@android:color/transparent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="0dp"
                            android:textColor="@android:color/black"
                            android:text="@string/student_basic_information"/>

                        <com.appat.ecamp.CustomViews.CustomTextInputLayout
                            android:id="@+id/editTextStudentNameLayout"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:visibility="visible"
                            android:gravity="bottom"
                            android:layoutDirection="locale"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:orientation="horizontal">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:id="@+id/editTextStudentName"
                                android:hint="@string/student_name"
                                android:drawablePadding="10dp"
                                android:imeOptions="actionNext"
                                style="@style/CustomEditText"/>
                        </com.appat.ecamp.CustomViews.CustomTextInputLayout>

                        <com.appat.ecamp.CustomViews.CustomTextInputLayout
                            android:id="@+id/editTextGradeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:visibility="visible"
                            android:gravity="bottom"
                            android:layoutDirection="locale"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:id="@+id/editTextGrade"
                                android:hint="@string/grade"
                                android:drawablePadding="10dp"
                                android:imeOptions="actionNext"
                                style="@style/CustomEditText"/>
                        </com.appat.ecamp.CustomViews.CustomTextInputLayout>

                        <com.appat.ecamp.CustomViews.CustomTextInputLayout
                            android:id="@+id/editTextSchoolLayout"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:visibility="visible"
                            android:gravity="bottom"
                            android:layoutDirection="locale"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:id="@+id/editTextSchool"
                                android:hint="@string/school"
                                android:drawablePadding="10dp"
                                android:imeOptions="actionNext"
                                style="@style/CustomEditText"/>
                        </com.appat.ecamp.CustomViews.CustomTextInputLayout>

                        <com.appat.ecamp.CustomViews.CustomTextInputLayout
                            android:id="@+id/editTextDoBLayout"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:visibility="visible"
                            android:gravity="bottom"
                            android:layoutDirection="locale"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:id="@+id/editTextDoB"
                                android:hint="@string/dob"
                                android:drawablePadding="10dp"
                                android:imeOptions="actionNext"
                                android:focusable="false"
                                android:drawableEnd="@drawable/calendar"
                                style="@style/CustomEditText"/>
                        </com.appat.ecamp.CustomViews.CustomTextInputLayout>

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:background="@drawable/radio_button_bg">

                            <RadioButton
                                android:id="@+id/male"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="@string/male"
                                android:checked="true"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:textColor="@drawable/radio_button_text_selector"
                                android:button="@android:color/transparent"
                                android:background="@drawable/radio_button_selector"/>

                            <RadioButton
                                android:id="@+id/female"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="@string/female"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:button="@android:color/transparent"
                                android:textColor="@drawable/radio_button_text_selector"
                                android:background="@drawable/radio_button_selector"/>
                        </RadioGroup>

                        <com.appat.ecamp.CustomViews.CustomTextInputLayout
                            android:id="@+id/editTextCenterLayout"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:visibility="visible"
                            android:gravity="bottom"
                            android:layoutDirection="locale"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:id="@+id/editTextCenter"
                                android:hint="@string/center"
                                android:drawablePadding="10dp"
                                android:imeOptions="actionNext"
                                android:focusable="false"
                                android:drawableEnd="@drawable/drop_down_arrow"
                                style="@style/CustomEditText"/>
                        </com.appat.ecamp.CustomViews.CustomTextInputLayout>

                        <com.appat.ecamp.CustomViews.CustomTextInputLayout
                            android:id="@+id/editTextLocationLayout"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:visibility="visible"
                            android:gravity="bottom"
                            android:layoutDirection="locale"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:id="@+id/editTextLocation"
                                android:hint="@string/location"
                                android:drawablePadding="10dp"
                                android:imeOptions="actionNext"
                                style="@style/CustomEditText"/>
                        </com.appat.ecamp.CustomViews.CustomTextInputLayout>

                        <com.appat.ecamp.CustomViews.CustomTextInputLayout
                            android:id="@+id/editTextRegionLayout"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:visibility="visible"
                            android:gravity="bottom"
                            android:layoutDirection="locale"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:id="@+id/editTextRegion"
                                android:hint="@string/region"
                                android:drawablePadding="10dp"
                                android:imeOptions="actionDone"
                                style="@style/CustomEditText"/>
                        </com.appat.ecamp.CustomViews.CustomTextInputLayout>

                        <Button
                            android:layout_marginTop="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="@string/next"
                            android:id="@+id/proceedButton"
                            style="@style/CustomButton"
                            android:layout_marginStart="40dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginBottom="20dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@android:color/transparent"
            android:clipToPadding="false"
            android:clipChildren="false">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:expandedTitleGravity="bottom"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:background="@android:color/transparent"
                app:collapsedTitleGravity="center_vertical"
                app:collapsedTitleTextAppearance="@style/collapsedbar"
                app:expandedTitleTextAppearance="@style/expandedappbar"
                android:minHeight="?attr/actionBarSize"
                android:fitsSystemWindows="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:cropToPadding="false"
                    android:clipChildren="false"
                    android:background="@android:color/transparent"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7"
                    android:fitsSystemWindows="true">

                    <ImageView
                        android:id="@+id/headerImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/student_registration_banner"
                        android:scaleType="centerCrop"
                        app:layout_collapseMode="parallax"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="false"
                        android:background="@drawable/title_gradient"
                        android:layout_alignBottom="@+id/headerImage"
                        app:layout_collapseMode="parallax"/>
                </RelativeLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="scroll|enterAlways"
                    android:minHeight="?attr/actionBarSize"
                    android:background="@color/colorAccent"
                    app:titleTextColor="@android:color/white"
                    android:alpha="0"/>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>